
<div class="panel panel-default">
<div class="panel-heading">新建文本消息</div>
	
  <div class="panel-body">

<form class="form-horizontal" id="createTextMsg" action="./weixin/message/text/create" onsubmit="return $Ws.postForm(this,'#message_view');" >
	$!{$wxsqUser}
		  <input type="hidden" name="token" value="$!{token}">
		  <input type="hidden" name="wxsqUserId" value="$!{wxsqUser.id}">	
			
		  <input type="hidden" name="wxAccountId" value="$!{wxAccount.id}">	
		  <input type="hidden" name="wxId" value="$!{wxAccount.wxId}">			
          <div class="form-group has-success has-feedback">            
            <label class="control-label col-sm-2" for="weixinName">消息名称</label>
            <div class="col-sm-4">
            	<div class="input-group">
                <span class="input-group-addon">*</span>
                <input type="text" class="form-control" name="name" value="$!{wxMessage.name}" id="name" aria-describedby="nameStatus">
              </div>
              
              <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
              <span id="nameStatus" class="sr-only">(success)</span>
            </div>
          </div>
         <div class="form-group has-success has-feedback">
            <label class="control-label col-sm-2" for="content">回复内容</label>
            <div class="col-sm-4">
              
               <textarea name="content" id="content" class="form-control" rows="3"> $!{wxMessage.content} </textarea>  
              
             
            </div>
          </div>		 
		 <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit"  class="btn btn-success">保存</button>
            </div>
          </div>
        </form>
			</div>
				
<div class="panel-footer"></div>
</div>